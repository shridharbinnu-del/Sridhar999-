//@version=5\nindicator("Exact Support and Resistance Pro v6", overlay=true)\n\n// Input Parameters\nlength = input(14, title="Lookback Period")\nmethod = input.string("Highs/Lows", title="Calculation Method", options=["Highs/Lows", "Custom Highs/Lows"])\n\n// Function to calculate swing highs and lows\nf_swing_high(src, length) => highest(src, length) \n\nf_swing_low(src, length) => lowest(src, length) \n\nvar float resistance_level = na\nvar float support_level = na\n\n// Calculate Support and Resistance\nif method == "Highs/Lows"\n    resistance_level := f_swing_high(high, length)\n    support_level := f_swing_low(low, length)\n\n// Plotting the Support and Resistance Levels\nplot(resistance_level, color=color.red, linewidth=2, title="Resistance")\nplot(support_level, color=color.green, linewidth=2, title="Support")\n\n// Alerts\nalertcondition(close > resistance_level, title="Resistance Break", message="Price crossed above the resistance level")\nalertcondition(close < support_level, title="Support Break", message="Price crossed below the support level")\n\n// Example Usage\n// Add this script to your chart and adjust the lookback period to your desired value for better accuracy.